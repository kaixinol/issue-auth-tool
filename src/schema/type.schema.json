{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "type",
        "reason",
        "mcp"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "outdated",
                "evil",
                "alias",
                "invalid"
            ]
        },
        "reason": {
            "type": "string",
            "minLength": 1
        },
        "mcp": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^(view|google)"
            },
            "default": []
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "invalid"
                    }
                },
                "required": [
                    "type"
                ]
            },
            "then": {
                "properties": {
                    "mcp": {
                        "maxItems": 0,
                        "type": "array"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "enum": [
                            "outdated",
                            "evil",
                            "alias"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "mcp": {
                        "type": "array",
                        "minItems": 1
                    }
                }
            }
        }
    ]
}